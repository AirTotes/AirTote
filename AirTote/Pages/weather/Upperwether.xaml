<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="AirTote.Pages.Upperwether"
	Title="高層天気図">
	<ScrollView>
		<StackLayout>
			<Label Text="アジア太平洋200hPa高度・気温・風・圏界面天気図" FontSize="Medium" />
			<StackLayout Orientation="Horizontal">
				<Button
					Text="00UTC"
					HorizontalOptions="FillAndExpand"
					Clicked="upperasia200_Clicked"/>
				<Button
					Text="12UTC"
					HorizontalOptions="FillAndExpand"
					Clicked="upperasia200hpa12_Clicked"/>
			</StackLayout>

			<Label Text="アジア太平洋250hPa高度・気温・風天気図" FontSize="Medium" />
