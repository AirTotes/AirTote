				<Button
					Text="00UTC"
					HorizontalOptions="FillAndExpand"
					Clicked="uppereast850hpa00_Clicked"/>
				<Button
					Text="12UTC"
					HorizontalOptions="FillAndExpand"
					Clicked="uppereast850hpa12_Clicked"/>
			</StackLayout>

			<Label Text="" FontSize="Medium"/>
			<Button
				Text="アジア地上気圧、850hPa気温／500hPa高度・渦度天気図"
				HorizontalOptions="FillAndExpand"
				Clicked="asiaGround850_Clicked"/>

			<Label Text="" FontSize="Medium"/>

			<Label Text="高層断面図（風・気温・露点等）東経130度／140度解析"  FontSize="Medium" />
			<StackLayout Orientation="Horizontal">
				<Button
					Text="00UTC"
					HorizontalOptions="FillAndExpand"
					Clicked="uppercut00_Clicked"/>
				<Button
					Text="12UTC"
					HorizontalOptions="FillAndExpand"
					Clicked="uppercut12_Clicked"/>
