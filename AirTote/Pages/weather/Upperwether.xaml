				<Button
					Text="12UTC"
					HorizontalOptions="FillAndExpand"
					Clicked="upperasia250hpa12_Clicked"/>
			</StackLayout>

			<Label Text="北太平洋300hPa高度・気温・風天気図" FontSize="Medium" />
