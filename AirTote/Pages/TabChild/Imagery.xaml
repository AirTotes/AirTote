<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="AirTote.Pages.TabChild.Imagery"
	xmlns:tpv="clr-namespace:AirTote.TwoPaneView;assembly=AirTote.TwoPaneView.MAUI"
	Title="Imagery">

	<tpv:TwoPaneView
		x:Name="TPV"
		LeftPaneWidth="300"
		RightPaneWidth="*"
		MinimumTwoPaneWidth="500">
		<ListView
			x:Name="ImageryList"
			IsGroupingEnabled="True">
			<ListView.ItemTemplate>
				<DataTemplate>
					<TextCell
						Text="{Binding ShortTitle}"
						Detail="{Binding FullTitle}"
						Command="{Binding Command}"
						CommandParameter="{Binding CommandParametor}"/>
				</DataTemplate>
			</ListView.ItemTemplate>

			<ListView.GroupHeaderTemplate>
				<DataTemplate>
					<ViewCell>
						<Label Text="{Binding Name}"
							BackgroundColor="LightGray"
							FontSize="18"
							FontAttributes="Bold" />
					</ViewCell>
				</DataTemplate>
			</ListView.GroupHeaderTemplate>
		</ListView>
	</tpv:TwoPaneView>
</ContentPage>
